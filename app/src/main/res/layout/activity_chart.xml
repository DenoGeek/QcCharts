<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/faint_color"
    android:layout_height="match_parent"
    tools:context=".ChartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ten"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/five"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="X-Bar chart"
                    android:textColor="@color/primary_text"
                    android:id="@+id/x_xhart_label"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:layout_toLeftOf="@+id/xucl"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="X-Bar chart"
                    android:id="@+id/xucl"
                    android:textColor="@color/primary_text"
                    android:layout_margin="@dimen/five"
                    android:layout_toLeftOf="@+id/xlcl"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="X-Bar chart"
                    android:id="@+id/xlcl"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_below="@+id/x_xhart_label"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ten"
                    android:id="@+id/x_analysis"
                    android:padding="@dimen/ten"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_below="@id/chart1"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/five"
            android:layout_marginTop="@dimen/sixteen"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="R-Bar chart"
                    android:textColor="@color/primary_text"
                    android:id="@+id/r_chart_label"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:layout_toLeftOf="@+id/rucl"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="X-Bar chart"
                    android:id="@+id/rucl"
                    android:textColor="@color/primary_text"
                    android:layout_margin="@dimen/five"
                    android:layout_toLeftOf="@+id/rlcl"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="X-Bar chart"
                    android:id="@+id/rlcl"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/rcharts"
                    android:layout_below="@+id/r_chart_label"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ten"
                    android:id="@+id/r_analysis"
                    android:textSize="16sp"
                    android:padding="@dimen/ten"
                    android:textColor="@color/primary_text"
                    android:layout_below="@id/rcharts"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>