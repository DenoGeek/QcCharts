<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/main_motion_layout_container_q_start"
        motion:constraintSetEnd="@+id/main_motion_layout_container_q_end"
        motion:interpolator="easeOut"
        motion:duration="400"/>

    <Transition
        motion:constraintSetStart="@+id/rushed_main_motion_layout_start"
        motion:constraintSetEnd="@+id/rushed_main_motion_layout_end"
        motion:interpolator="easeOut"
        motion:duration="10"/>

    <ConstraintSet android:id="@+id/main_motion_layout_container_q_start">

        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="0dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/main_motion_layout_container_q_end">


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

    </ConstraintSet>




    <ConstraintSet android:id="@+id/rushed_main_motion_layout_start">

        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="0dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/rushed_main_motion_layout_end">


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

    </ConstraintSet>

</MotionScene>