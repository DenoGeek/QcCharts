<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/main_motion_layout_container_q_start"
        motion:constraintSetEnd="@+id/main_motion_layout_container_q_end"
        motion:interpolator="easeOut"
        motion:duration="400"/>

    <Transition
        motion:constraintSetStart="@+id/main_motion_layout_reveal_start"
        motion:constraintSetEnd="@+id/main_motion_layout_reveal_end"
        motion:interpolator="easeOut"
        motion:duration="400"/>

    <Transition
        motion:constraintSetStart="@+id/rushed_main_motion_layout_start"
        motion:constraintSetEnd="@+id/rushed_main_motion_layout_end"
        motion:interpolator="easeOut"
        motion:duration="10"/>

    <ConstraintSet android:id="@+id/main_motion_layout_container_q_start">

        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="0dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/main_motion_layout_container_q_end">


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

    </ConstraintSet>




    <ConstraintSet android:id="@+id/rushed_main_motion_layout_start">

        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="0dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />


        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/rushed_main_motion_layout_end">


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

    </ConstraintSet>


    <ConstraintSet android:id="@+id/main_motion_layout_reveal_start">



        <Constraint
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ffffffff"
            android:alpha="0.0"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/guideline_recycler_top"
            app:layout_constraintBottom_toTopOf="@+id/guideline_recycler_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/guideline_recycler_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <Constraint
            android:id="@+id/guideline_recycler_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

        <Constraint
            android:id="@+id/data_entry_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789.,"
            android:alpha="0.0"
            android:visibility="gone"
            android:clickable="false"
            android:backgroundTint="#A71B82"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline_recycler_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/data_entry_btn_next"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@string/next"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:alpha="0.0"
            android:visibility="visible"
            android:clickable="false"
            android:background="@drawable/text_side_btn_bg"
            app:layout_constraintStart_toEndOf="@+id/data_entry_edit"
            app:layout_constraintTop_toTopOf="@+id/data_entry_edit"
            app:layout_constraintBottom_toBottomOf="@+id/data_entry_edit"/>

        <Constraint
            android:id="@+id/sample_no_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_no_indicate"
            android:textColor="#ff707070"
            android:alpha="0.0"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/data_entry_edit"
            app:layout_constraintStart_toStartOf="@+id/data_entry_edit" />

        <Constraint
            android:id="@+id/sample_left_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/samples_left_indicate"
            android:textColor="#ff707070"
            android:alpha="0.0"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sample_no_indicate_txt"
            app:layout_constraintEnd_toEndOf="@+id/sample_no_indicate_txt" />

        <Constraint
            android:id="@+id/sample_no_indicate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff707070"
            android:alpha="0.0"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/sample_no_indicate_txt"
            app:layout_constraintStart_toEndOf="@+id/sample_no_indicate_txt" />

        <Constraint
            android:id="@+id/sample_left_indicate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff707070"
            android:alpha="0.0"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/sample_left_indicate_txt"
            app:layout_constraintStart_toEndOf="@+id/sample_left_indicate_txt" />

        <Constraint
            android:id="@+id/plot_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plot_btn"
            android:layout_marginTop="34dp"
            android:alpha="0.0"
            android:visibility="gone"
            android:clickable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sample_left_indicate_txt"/>

        <Constraint
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#ff127979"
            android:clickable="false"
            android:alpha="0.0"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/plot_btn"
            app:layout_constraintStart_toStartOf="parent"/>


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/type_selection_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:background="#ffffffff"
            app:layoutDescription="@xml/type_selection_layout_scenes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="0dp"/>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/main_motion_layout_reveal_end">

        <Constraint
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ffffffff"
            android:alpha="1.0"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/guideline_recycler_top"
            app:layout_constraintBottom_toTopOf="@+id/guideline_recycler_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/guideline_recycler_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <Constraint
            android:id="@+id/guideline_recycler_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

        <Constraint
            android:id="@+id/data_entry_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789.,"
            android:alpha="1.0"
            android:visibility="visible"
            android:clickable="true"
            android:backgroundTint="#A71B82"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline_recycler_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/data_entry_btn_next"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@string/next"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:alpha="1.0"
            android:visibility="visible"
            android:clickable="true"
            android:background="@drawable/text_side_btn_bg"
            app:layout_constraintStart_toEndOf="@+id/data_entry_edit"
            app:layout_constraintTop_toTopOf="@+id/data_entry_edit"
            app:layout_constraintBottom_toBottomOf="@+id/data_entry_edit"/>

        <Constraint
            android:id="@+id/sample_no_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_no_indicate"
            android:textColor="#ff707070"
            android:alpha="1.0"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/data_entry_edit"
            app:layout_constraintStart_toStartOf="@+id/data_entry_edit" />

        <Constraint
            android:id="@+id/sample_left_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/samples_left_indicate"
            android:textColor="#ff707070"
            android:alpha="1.0"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sample_no_indicate_txt"
            app:layout_constraintEnd_toEndOf="@+id/sample_no_indicate_txt" />

        <Constraint
            android:id="@+id/sample_no_indicate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff707070"
            android:alpha="1.0"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/sample_no_indicate_txt"
            app:layout_constraintStart_toEndOf="@+id/sample_no_indicate_txt" />

        <Constraint
            android:id="@+id/sample_left_indicate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff707070"
            android:alpha="1.0"
            android:visibility="visible"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/sample_left_indicate_txt"
            app:layout_constraintStart_toEndOf="@+id/sample_left_indicate_txt" />

        <Constraint
            android:id="@+id/plot_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plot_btn"
            android:layout_marginTop="34dp"
            android:alpha="1.0"
            android:visibility="visible"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sample_left_indicate_txt"/>

        <Constraint
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#ff127979"
            android:clickable="true"
            android:alpha="1.0"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/plot_btn"
            app:layout_constraintStart_toStartOf="parent"/>


        <Constraint
            android:id="@+id/launch_only_splash_screen_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_screen_bg"
            app:layoutDescription="@xml/launch_splash_screen_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

        <Constraint
            android:id="@+id/guideline_custom_q_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/guideline_custom_q_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <Constraint
            android:id="@+id/guideline_custom_q_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <Constraint
            android:id="@+id/type_selection_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:background="#ffffffff"
            app:layoutDescription="@xml/type_selection_layout_scenes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:translationX="-1000dp"/>

    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/main_motion_layout_reveal_end"
        motion:constraintSetEnd="@+id/main_motion_layout_reveal_start"
        motion:interpolator="easeOut"
        motion:duration="400"/>
</MotionScene>